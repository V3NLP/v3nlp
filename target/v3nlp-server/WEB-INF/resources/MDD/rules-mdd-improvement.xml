<?xml version="1.0" encoding="ISO-8859-1" ?>
<concepts>

   <!-- depression synonyms follow -->

   <concept>
      <def><![CDATA[(?i)(?m)major\s+(depression|depressive\s+disorder)|(depressed|low)\s+mood|sadness|spirits|(?<!(respiratory|neurologic|ST)\s{0,100})depression|depressed(?!\s{1,100}counts)]]></def>
      <capt_group_num>0</capt_group_num>
      <type>RegEx</type>
      <name>Depression Keyword</name>
      <features>
         <feature>
            <name>code</name>
            <value><![CDATA[DSG-NLP:depression]]></value>
         </feature>
      </features>
   </concept>

   <!-- improvement synonyms follow-->

   <concept>
      <def><![CDATA[(?i)(?m)(?<=((substantially|significantly|very\s{1,100}much|much|greatly|consistently|considerably|clearly|markedly|dramatically)\s{1,100}))(better|improved)|responding|responder|improving|feeling\s+(\S+\s+){0,2}better|continues\s+to\s+improve|better\s+controlled]]></def>
      <capt_group_num>0</capt_group_num>
      <type>RegEx</type>
      <name>Improvement Keyword</name>
      <features>
         <feature>
            <name>code</name>
            <value><![CDATA[DSG-NLP:improvement]]></value>
         </feature>
      </features>
   </concept>

</concepts>
