<?xml version="1.0" encoding="ISO-8859-1" ?>
<concepts>

   <!-- depression synonyms follow -->

   <concept>
      <def><![CDATA[(?i)(?m)major\s+(depression|depressive\s+disorder)|(depressed|low)\s+mood|sadness|spirits|(?<!(respiratory|neurologic|ST)\s{0,100})depression|depressed(?!\s{1,100}counts)]]></def>
      <capt_group_num>0</capt_group_num>
      <type>RegEx</type>
      <name>Depression Keyword</name>
      <features>
         <feature>
            <name>code</name>
            <value><![CDATA[DSG-NLP:depression]]></value>
         </feature>
      </features>
   </concept>

   <!-- improvement synonyms follow-->

   <concept>
      <def><![CDATA[(?i)(?m)(?<=((substantially|significantly|very\s{1,100}much|much|greatly|consistently|considerably|clearly|markedly|dramatically)\s{1,100}))(better|improved)|responding|responder|improving|feeling\s+(\S+\s+){0,2}better|continues\s+to\s+improve|better\s+controlled]]></def>
      <capt_group_num>0</capt_group_num>
      <type>RegEx</type>
      <name>Improvement Keyword</name>
      <features>
         <feature>
            <name>code</name>
            <value><![CDATA[DSG-NLP:improvement]]></value>
         </feature>
      </features>
   </concept>

   <!-- remitted synonyms follow-->

   <concept>
      <def><![CDATA[(?i)(?m)remitted|in\s+remission|recovered|resolved|returned\s+to\s+normal|back\s+to\s+(normal|baseline)|near\s*-?\s*normal|very\s+stable\s+for\s+a\s+long\s+time|well\s*-?\s*controlled]]></def>
      <capt_group_num>0</capt_group_num>
      <type>RegEx</type>
      <name>Remitted Keyword</name>
      <features>
         <feature>
            <name>code</name>
            <value><![CDATA[DSG-NLP:remitted]]></value>
         </feature>
      </features>
   </concept>

   <!-- CGI1 synonyms follow-->

   <concept>
      <def><![CDATA[(?i)(?m)(does\s+not\s+feel\s+depressed\s+currently|has\s+not\s+felt\s+depressed|euthymic|euthymia)|CGI\s*(=|:|is)?\s*1]]></def>
      <capt_group_num>0</capt_group_num>
      <type>RegEx</type>
      <name>CGI1 Keyword</name>
      <features>
         <feature>
            <name>code</name>
            <value><![CDATA[DSG-NLP:CGI1]]></value>
         </feature>
      </features>
   </concept>

 <!-- no longer depressed -->

   <concept>
      <def><![CDATA[(?i)(?m)no\s+longer\s+(major\s+(depression|depressive\s+disorder)|(depressed|low)\s+mood|sadness|spirits|(?<!(respiratory|neurologic|ST)\s{0,100})depression|depressed(?!\s{1,100}counts))]]></def>
      <capt_group_num>0</capt_group_num>
      <type>RegEx</type>
      <name>No longer depressed keyword</name>
      <features>
         <feature>
            <name>code</name>
            <value><![CDATA[DSG-NLP:no-longer-depressed]]></value>
         </feature>
      </features>
   </concept>

   <!-- unchanged synonyms follow-->

   <concept>
      <def><![CDATA[(?i)(?m)no\s+better|unchanged|unimproved|about\s+the\s+same|not\s+doing\s+well|still|continu(es|ed|ing|e)|(remains|remaining)\s+(poor|low|significant)|mood\s+continues\s+to\s+be\s+(poor|low)|(much\s+)?worse]]></def>
      <capt_group_num>0</capt_group_num>
      <type>RegEx</type>
      <name>Unchanged Keyword</name>
      <features>
         <feature>
            <name>code</name>
            <value><![CDATA[DSG-NLP:unchanged]]></value>
         </feature>
      </features>
   </concept>

   <!-- CGI3 synonyms follow-->

   <concept>
      <def><![CDATA[(?i)(?m)(?<!(not|non)\s{0,100}-?\s{0,100})dysphoric|CGI\s*(=|:|is)?\s*(3|4|5|6|7)]]></def>
      <capt_group_num>0</capt_group_num>
      <type>RegEx</type>
      <name>CGI3 Keyword</name>
      <features>
         <feature>
            <name>code</name>
            <value><![CDATA[DSG-NLP:CGI3]]></value>
         </feature>
      </features>
   </concept>

</concepts>
