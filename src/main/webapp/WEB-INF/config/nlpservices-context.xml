<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       		http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">



    <bean id="metamapService"
          class="org.springframework.remoting.httpinvoker.HttpInvokerProxyFactoryBean"
          p:serviceUrl="${metamapServerUrl}"
          p:serviceInterface="gov.va.research.v3nlp.common.metamap.MetaMapServiceHttpInvoker"/>


    <!-- NLP Processing Units -->
    <bean id="gov.va.vinci.v3nlp.services.MetamapProviderServiceImpl"
          class="gov.va.vinci.v3nlp.services.MetamapProviderServiceImpl"
          p:restTemplate-ref="restTemplate" p:metamapService-ref="metamapService"/>

    <bean name="hitex.gate.SentenceSplitter" class="gov.va.vinci.v3nlp.services.gate.GenericGateService" >
            <constructor-arg><ref bean="defaultSentenceSplitter"/></constructor-arg>
    </bean>
    <bean name="hitex.gate.Tokenizer" class="gov.va.vinci.v3nlp.services.gate.GenericGateService" >
            <constructor-arg><ref bean="defaultTextTokenizer"/></constructor-arg>
    </bean>


    <bean name="gov.va.research.v3nlp.gate.pr.OpenNLPPOSTaggerAdapter" class="gov.va.vinci.v3nlp.services.gate.GenericGateService" >
            <constructor-arg><ref bean="hitexPOSTagger"/></constructor-arg>
    </bean>

    <bean name="gov.va.research.v3nlp.gate.pr.OParser" class="gov.va.vinci.v3nlp.services.gate.GenericGateService" >
            <constructor-arg><ref bean="oParser"/></constructor-arg>
    </bean>

    <bean name="gov.va.vinci.v3nlp.services.gate.HitexConceptFinderService" class="gov.va.vinci.v3nlp.services.gate.HitexConceptFinderService">
            <constructor-arg><ref bean="defaultRegexConceptFinder"/></constructor-arg>
    </bean>
    <bean name="gov.va.vinci.v3nlp.services.NegationService" class="gov.va.vinci.v3nlp.services.NegationServiceImpl" init-method="initialize">
        <property name="sentenceRulesFile">
            <value type="org.springframework.core.io.Resource">WEB-INF/resources/EnglishSD.bin.gz</value>
        </property>
        <property name="negationRulesFile">
            <value type="org.springframework.core.io.Resource">WEB-INF/resources/negex/rules.txt</value>
        </property>
    </bean>

    <bean name="gov.va.vinci.v3nlp.services.gate.HitexSectionizerImpl" class="gov.va.vinci.v3nlp.services.gate.HitexSectionizerImpl">
        <lookup-method name="createSectionizer" bean="defaultSectionizer"/>
    </bean>

</beans>